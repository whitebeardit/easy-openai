{
  "name": "easy-openai",
  "description": "Api to make your life easier when thinking about the openAI",
  "repository": "git@github.com:whitebeardit/easy-openai.git",
  "scripts": {
    "test": "yarn run test:unit",
    "test:ci": "yarn test:unit && yarn run test:int",
    "test:unit": "jest --config ./jest/jest.config.js --detectOpenHandles",
    "test:int": "jest --runInBand --forceExit --config ./jest/jest.int-config.js --detectOpenHandles",
    "test:component": "jest --runInBand --config ./jest/jest.component-config.js --detectOpenHandles",
    "test:mutation": "npx stryker run",
    "test:coverage": "jest --coverage --runInBand --forceExit --config ./jest/jest.int-config.js --detectOpenHandles && jest --coverage --runInBand --forceExit --config ./jest/jest.config.js --detectOpenHandles",
    "dev": "ts-node-dev src/server.ts",
    "start": "node dist/src/server.js",
    "build": "tsc -p .",
    "clean": "rm -rf dist",
    "release": "yarn run semantic-release",
    "pipeline:test:unit": "echo 'none'",
    "pipeline:build": "yarn run clean; tsc -p .;yarn run copy-essentials",
    "prettier": "prettier --write src/**/*.ts",
    "lint": "eslint . --ext .ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "openai": "^3.2.1",
    "traceability": "^3.1.1",
    "ts-node": "^10.8.0",
    "typescript": "^4.9.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^28.1.0",
    "@types/node": "^16.18.15",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-boundaries": "^3.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^4.2.5",
    "jest": "^28.1.0",
    "lint-staged": "^10.2.4",
    "prettier": "^2.8.4",
    "semantic-release": "^19.0.3",
    "ts-jest": "^28.0.3",
    "ts-node-dev": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn prettier",
      "yarn lint"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "release": {
    "extends": "@whitebeardit/whitebeard-standards/lib/vscode/configs/semantic-release/config"
  },
  "main": "dist/src/openai/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ]
}